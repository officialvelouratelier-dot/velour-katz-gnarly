
// src/data/cards.ts

// 4 rarities we’ll use everywhere
export type Rarity = "Common" | "Uncommon" | "Rare" | "Legendary";

// Exact drop rates (must sum to 100)
export const RARITY_WEIGHTS: Record<Rarity, number> = {
  Common: 45,
  Uncommon: 20,
  Rare: 10,
  Legendary: 25, // mini-game triggers on this
};

// Optional: handy ordered list if we need it later
export const RARITY_LIST: Rarity[] = ["Common", "Uncommon", "Rare", "Legendary"];
// Type definition for each photocard
export type Card = {
  id: string;      // unique ID (e.g. "bern-c1")
  name: string;    // member name (e.g. "Bern")
  group: string;   // "KATZ"
  rarity: Rarity;  // Common | Uncommon | Rare | Legendary
  image: string;   // path to file in /public
};

// Example cards — replace with your actual image filenames
